<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
    <resetJUL>true</resetJUL>
  </contextListener>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date - %-5level - %logger - %message%n</pattern>
    </encoder>
  </appender>

  <appender name="benchmark" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>build/benchmark.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>benchmark-%i.log</fileNamePattern>
      <maxIndex>10</maxIndex>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>10MB</maxFileSize>
    </triggeringPolicy>
    <encoder>
      <pattern>%date - %logger - %message%n</pattern>
    </encoder>
  </appender>

  <logger name="benchmark" additivity="false" level="info">
    <appender-ref ref="benchmark"/>
  </logger>

  <logger name="org.obiba.magma.benchmark" level="debug"/>

  <root level="info">
    <appender-ref ref="console"/>
  </root>

</configuration>